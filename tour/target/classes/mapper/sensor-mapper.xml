<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
				"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
				
<mapper namespace="edu.autorcar.dao.SensorDao">

	<insert id="insert" parameterType="Sensor">
	
		INSERT INTO sensor (
			sensor_id, owner, place, sensor_type, value
		) VALUES (#{sensorId}, #{owner}, #{place}, #{sensorType}, #{value})	
	</insert>
	
	<select id="getValues" parameterType="SensorCriteria" resultType="Sensor">
		SELECT * FROM SENSOR
		WHERE owner = #{owner}
	</select>	
</mapper>
	
	